!!!
%html

  %head
    %title
      - if content_for? :title
        = yield(:title)
        = " - "
      Hank Stoever
    Hank Stoever
    = analytics_init if Rails.env.production?
    = stylesheet_link_tag    "application", "https://fonts.googleapis.com/css?family=Lato:300,400,700", "https://fonts.googleapis.com/css?family=Roboto:300italic,300,500,500italic,700italic,700", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = favicon_link_tag
  %body
    #sidebar
      =# cache "sidebar" do
      = image_tag "https://secure.gravatar.com/avatar/73719c8eb97a63acd87f2f0a918a5005?s=300", class: "avatar", width: 300, height: 300
      .desc
        %h1.retro= link_to "Hank Stoever", root_url
        %p.description
          = succeed(link_to ".", "https://vimeo.com/40434608", target: '_blank', style: "text-decoration: none;", class: "gnar") do
            part time nerd, part time gnar shredder
        %p.description
          software engineer at
          = link_to "up global", "http://up.co"
        %br
        %p.description
          Seattle, Earth -
          = link_to icon("envelope"), "mailto:hstove@gmail.com"
          = link_to icon("github"), "https://github.com/hstove", target: '_blank'
          = link_to icon("linkedin"), "http://www.linkedin.com/in/hankstoever", target: '_blank'
          = link_to icon("twitter"), "https://twitter.com/heynky", target: '_blank'
          - google_url = "https://plus.google.com/114545204071567890438?rel=author"
          = link_to icon("google-plus"), google_url, target: '_blank'
          = link_to icon("rss"), posts_url(format: :rss), target: '_blank'
          = link_to "https://rubygems.org/profiles/heynk" do
            = image_tag "/images/ruby.png", height: 11, target: "_blank"
        %br
        = link :projects
        %p.link= link_to "Blog", posts_path
        = render partial: "customers/form"
    #main
      /= hn_ad
      /= bitcoin_ad
      = render "layouts/bitcoin_rails_ad"
      - if notice
        %p.notice= notice
      = yield
