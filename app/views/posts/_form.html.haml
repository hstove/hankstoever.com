= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :posted_at
    %br
    = f.datetime_select :posted_at
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :body
    %br
    = f.text_area :body, rows: 20, cols: 50
  .field
    = f.label :published
    = f.check_box :published
  .actions
    = f.submit 'Save'
